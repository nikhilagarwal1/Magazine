<h1>Magazine</h1>
 
<table class="table table-hover">
  <tr class="active">
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th colspan="3">Options</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-success btn-sm" %></td>
      <td><%= link_to 'Delete', article_path(article), class: "btn btn-danger btn-sm" ,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<div align="center">
  <%= link_to 'Create New article', new_article_path, class: "btn btn-primary" %>
</div>